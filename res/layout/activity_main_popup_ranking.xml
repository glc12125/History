<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rankingTitleLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/rankingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="Arial"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="21sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <ImageButton
            android:id="@+id/shareButton"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/rankingText"
            android:background="@drawable/share_button"
            android:onClick="shareRankingToFacebook" />
    </RelativeLayout>

    <ListView
        android:id="@+id/rankingListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rankingTitleLine"
        android:background="#80FFFFFF" >
    </ListView>

    <Button
        android:id="@+id/displayAllAnswersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#80FFFFFF"
        android:onClick="displayAllAnswers"
        android:text="Review Answers"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>