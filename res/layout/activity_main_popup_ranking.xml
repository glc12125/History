<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/rankingText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="Arial"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="Another TextView"
        android:textColor="#000000"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <ListView
        android:id="@+id/rankingListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rankingText"
        android:background="#80FFFFFF" >
    </ListView>

    <ImageButton
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rankingListView"
        android:background="@drawable/login_with_facebook"
        android:onClick="displayAllAnswers"
        android:text="Review Answers" />

    <Button
        android:id="@+id/displayAllAnswersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#80FFFFFF"
        android:onClick="displayAllAnswers"
        android:text="Review Answers" />

</RelativeLayout>